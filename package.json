{
  "name": "playwright-typescript-automation-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:api": "npx playwright test --project=API",
    "test:ui": "npx playwright test --project=UI",
    "lint": "npx eslint .",
    "format": "npx prettier --check .",
    "format:write": "npx prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky",
    "allure:serve": "npx allure serve allure-results",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k0libri/playwright-typescript-automation-framework.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/k0libri/playwright-typescript-automation-framework/issues"
  },
  "homepage": "https://github.com/k0libri/playwright-typescript-automation-framework#readme",
  "lint-staged": {
    "**/*.{ts,tsx,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "allure-commandline": "2.20.1",
    "@eslint/js": "^9.39.1",
    "@playwright/mcp": "^0.0.49",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "allure-playwright": "^3.4.3",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
